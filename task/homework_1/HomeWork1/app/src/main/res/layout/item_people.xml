<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPeopleAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_darrel"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:src="@drawable/ic_darrel" />

    <View
        android:id="@+id/indicator_online"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="44dp"
        android:background="@drawable/indicator_online" />

    <TextView
        android:id="@+id/tvPeopleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="8dp"
        android:text="Darrel Steward"
        android:textColor="@color/people_user_full_name"
        android:textSize="20sp"
        tools:text="Darrel Steward" />

    <TextView
        android:id="@+id/tvPeopleEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="8dp"
        android:text="darrel@company.com"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        tools:text="darrel@company.com" />
</FrameLayout>